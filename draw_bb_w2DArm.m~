function draw_bb_w2DArm(time,X)


%% Define colors
orangeColor = [.7 .2 .18];
bodyColor = [.2 .2 .7];
ballColor = [.75 .4 .1];
armColor = [.75 .4 .1];

%% Unpack state variables:
theta = X(1);
phi = X(2);
alpha = X(3);

%% Get ballbot w2DArm parameters
[params,~] = get_ballbot2D_model_params();

%% Perform forward kinematics
[p_ball,p_body,p_arm1,p_arm2,p_com] = planarBB_w2DArm_kinematics_wrap(X,params);

% Robot parameters
r_s = 0.106;
l = 0.69;

r_b = .184;
h_b = 1.41;

x_s = -r_s*theta;
y_s = r_s;

L_armp = 0.85; %m
l_arm = 0.457; %m 

m_body = 51.663126;
m_arm = 3;
%% Perform forward kinematics
%ball
t=0:(2*pi/30):2*pi;
%ball_x = [x_s + r_s*cos(t+theta) x_s];
%ball_y = [y_s + r_s*sin(t+theta) y_s];

ball_x = [p_ball(1) + params.r*cos(t+theta) p_ball(1)];
ball_y = [p_ball(2)+params.r + params.r*sin(t+theta) p_ball(2)+params.r];

%COM
% com_x = x_s + l*sin(phi);
% com_y = y_s + l*cos(phi);

com_x = p_body(1);
com_y = p_body(2) + params.r;

%body rectangle shape
body_x = com_x + [-r_b r_b r_b -r_b -r_b].*cos(phi) + ...
	([h_b h_b -h_b -h_b h_b]./2).*sin(phi);
body_y = com_y - [-r_b r_b r_b -r_b -r_b].*sin(phi) + ...
	([h_b h_b -h_b -h_b h_b]./2).*cos(phi);

%body center line
cl_x  = [p_ball(1) p_ball(1) + h_b*sin(phi)];
cl_y  = [p_ball*2 y_s + h_b*cos(phi)];

%arm
arm_x = x_s + [L_armp*sin(phi) L_armp*sin(phi) - l_arm*sin(- alpha + phi)];
arm_y = y_s + [L_armp*cos(phi) L_armp*cos(phi) - l_arm*cos(- alpha + phi)];

arm1_x = [params.L_armjoint*sin(phi) p_arm1(1)];
arm1_y = [params.L_armjoint*cos(phi) p_arm1(2)];

arm2_x = [arm1_x(2) p_arm2(1)];
arm2_y = [arm1_y(2) p_arm2(2)];

%system CoM
COM_x = [ball_x p_com(1)];
COM_y = [ball_y p_com(2)];

%% Plot
    plot(cl_x,cl_y,'LineWidth',2,'Color',[.2 .2 .7]);
	hold on;
    plot(COM_x,COM_y,'--o','LineWidth',2,'Color',[.7 .2 .18],...
		'MarkerSize',15);
	plot(body_x,body_y,'LineWidth',3,'Color',[.2 .2 .7]);
    plot(ball_x,ball_y,'LineWidth',3,'Color',[.75 .4 .1]);
    plot(arm1_x,arm1_y,'-o','LineWidth',3,'Color',[.75 .4 .1]);
    plot(arm2_x,arm2_y,'-o','LineWidth',3,'Color',[.75 .4 .1]);
    
    % Formate the figure
    title(sprintf(' t= %6.4f',time));
    grid on;
    axis equal;
    
    hold off;
end

